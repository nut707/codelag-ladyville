source 'https://rubygems.org'
ruby '2.0.0'
gem 'rails', '4.0.1'
gem 'bootstrap-sass', '2.3.2'
gem 'recaptcha'
gem 'rails_12factor'
gem 'bootstrap-datepicker-rails'
gem 'bcrypt-ruby', :require => "bcrypt"
gem 'roo'
gem 'to_xls-rails'


group :development, :test do
  gem 'sqlite3'
  gem 'rspec-rails'
  gem 'guard-rspec'
  gem 'guard-spork'
  gem 'spork'
  gem 'debugger'
end

# Gems used only for assets and not required
# in production environments by default.
group :assets do
  gem 'sass-rails'
  gem 'coffee-rails'
  gem 'uglifier'
end

gem 'jquery-rails'

group :test do
  gem 'capybara'
end

group :production do
  gem 'pg'
end